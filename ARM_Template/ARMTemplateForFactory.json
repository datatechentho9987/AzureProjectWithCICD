                                }
                            },
                            "dataset": {
                                "referenceName": "JsonDS",
                                "type": "DatasetReference",
                                "parameters": {}
                            },
                            "firstRowOnly": false
                        }
                    },
                    {
                        "name": "ForEachCSVFile",
                        "type": "ForEach",
